{
  "manifest_version": 3,
  "name": "iris Product Detector",
  "version": "1.0",
  "description": "Detects and highlights products from segmented images",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/content-wrapper.js"],
    "css": ["css/overlay.css"],
    "type": "module"
  }],
  "web_accessible_resources": [{
    "resources": [
      "images/*", 
      "js/config.js",
      "js/content.js"
    ],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}